<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilePicImageView"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:src="@color/black"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintHeight_percent="0.8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.2" />

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="에그"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="13dp"
                app:layout_constraintStart_toEndOf="@id/profilePicImageView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/followsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="팔로워"
                android:textSize="12dp"
                android:textColor="#838D95"
                android:layout_marginTop="6dp"
                app:layout_constraintStart_toStartOf="@id/nameTextView"
                app:layout_constraintTop_toBottomOf="@id/nameTextView" />

            <TextView
                android:id="@+id/followsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="6dp"
                android:text="0"
                android:textColor="#838D95"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/followsText"
                app:layout_constraintStart_toEndOf="@id/followsText"
                app:layout_constraintTop_toTopOf="@id/followsText" />

            <TextView
                android:id="@+id/contourTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/followsTextView"
                app:layout_constraintStart_toEndOf="@id/followsTextView"
                android:text="|"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="@id/followsTextView" />

            <TextView
                android:id="@+id/followersText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="팔로잉"
                android:textSize="12dp"
                android:layout_marginStart="12dp"
                android:textColor="#838D95"
                android:layout_marginTop="6dp"
                app:layout_constraintStart_toEndOf="@id/contourTextView"
                app:layout_constraintTop_toBottomOf="@id/nameTextView" />

            <TextView
                android:id="@+id/followersTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="6dp"
                android:text="0"
                android:textColor="#838D95"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/followsText"
                app:layout_constraintStart_toEndOf="@id/followersText"
                app:layout_constraintTop_toTopOf="@id/followsText" />

            <TextView
                android:layout_width="210dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintStart_toStartOf="@id/followsText"
                app:layout_constraintTop_toBottomOf="@id/followsTextView"
                android:text="@string/friend"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>